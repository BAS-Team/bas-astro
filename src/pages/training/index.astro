---
import Headline from '~/components/blog/Headline.astro';
import Layout from '../../layouts/PageLayout.astro';
import TrainingList from '../../components/training/TrainingList.astro';

const allTrainings = await Astro.glob('../../content/training/*.md');

const metadata = {
  title: 'Training | Bina Anugerah Sukses',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline subtitle="Pelatihan di Bina Anugerah Sukses, mulai dari teknologi, hingga marketing">
      Trainings
    </Headline>
    <TrainingList trainings={allTrainings} />
  </section>
</Layout>
